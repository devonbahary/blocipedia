<div class="container">
  
  <h1>All Wikis</h1>
  <% @wikis.each do |wiki| %>
    <% if !wiki.private || current_user.admin? || wiki.user == current_user %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
            <small>
              <br>
              created <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.email %>
            </small>
          </h4>
        </div>
      </div>
    <% end %>
  <% end %>
  
</div>

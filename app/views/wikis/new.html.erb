<div class="container">
  <%= link_to "View Wikis", wikis_path, class: 'btn btn-primary' %>
  
  <h1>New Wiki</h1>
  
  <div class="row">
    <div class="col-md-4">
      <%= render partial: 'guidelines' %>
    </div>
    <div class="col-md-8">
      <%= form_for @wiki do |f| %>
        <div class="field form-group">
          <%= f.label :title, class: 'text-muted' %>
          <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Enter wiki title" %>
        </div>
        
        <div class="field form-group">
          <%= f.label :body, class: 'text-muted' %>
          <%= f.text_area :body, class: 'form-control', placeholder: "Enter wiki body" %>
        </div>
        
        <%= render partial: 'private', locals: {f: f, wiki: @wiki} %>
        
        <div class="actions form-group">
          <%= f.submit "Post Wiki", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  
</div>
